<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_height="@dimen/abc_action_bar_stacked_tab_max_width"
        android:id="@+id/question"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material"
        android:layout_gravity="center_horizontal"></FrameLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/answer1"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/answer2"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/answer3"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/answer4"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material" />
</LinearLayout>